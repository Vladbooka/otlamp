    {{#header}}
    <h4 class="mt-4 font-weight-bolder">{{header}}</h4>
    {{/header}}
    {{{table}}}
    {{#alert}}
    <div class="alert alert-info" role="alert">{{alert}}</div>
    {{/alert}}
</div>