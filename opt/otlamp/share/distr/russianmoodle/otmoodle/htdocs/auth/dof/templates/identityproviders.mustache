{{!
    @template auth_dof/identityproviders

    Moodle template for the registration page.

    Example context (json):
    {
        "hasidentityproviders": false
    }
}}

{{#hasidentityproviders}}
    <div class="subcontent potentialidps">
        <h6>{{#str}} potentialidps, auth {{/str}}</h6>
        <div class="potentialidplist">
            {{#identityproviders}}
                <div class="potentialidp {{name}}">
                    <a href="{{url}}" title={{#quote}}{{name}}{{/quote}} class="btn">
                    {{#iconurl}}
                        <img src="{{iconurl}}" alt="" width="24" height="24" class="oauthicon {{name}}"/>
                    {{/iconurl}}
                    <span class="localname">{{localname}}</span>
                    </a>
                </div>
            {{/identityproviders}}
        </div>
    </div>
{{/hasidentityproviders}}
    
