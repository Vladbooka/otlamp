{{!
    @template core_admin/setting_configempty

    Admin empty setting template.

    Context variables required for this template:
    * name - form element name
    * id - element id

    Example context (json):
    {
        "name": "test",
        "id": "test0",
        "buttontext": "spawn more overlords",
        "classes": ['btn'],
        "frontendhandler": "block_mylearninghistory/courses_filter_settings"
    }
}}
<div class="form-empty">
	<div class="wrapper"><div class="{{#classes}}{{.}} {{/classes}}">{{buttontext}}</div></div>
    <input type="hidden" name="{{name}}" id="{{id}}" value="{{value}}">
</div>

{{#js}}
require(['jquery'], function($) {
    document.addEventListener('readytosave', function(event) {
    	if(event.inputid === '{{id}}') {
    		$('#{{id}}').val(JSON.stringify(event.data));
    	}
    });
});
{{/js}}

